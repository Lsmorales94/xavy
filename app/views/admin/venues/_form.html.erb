<%= simple_form_for @venue, url: url, local: true, html: { novalidate: true, class: 'needs-validation' }  do |f| %>
<%= f.input :name, required: true %>
<%= f.input :description, as: :text, required: true %>
<%= f.input :phone, required: true %>
<%= f.input :image %>

<div class="field" >
    <label>Categorias </label>
    <% @categories.each do |category| %>
        <div class="field" >      
            <%= check_box_tag "categories[]", category.id %> <%= category.name %> 
        </div>
    <%end%>     
</div>

<%= f.button :submit, required: true %>
<% end %>
